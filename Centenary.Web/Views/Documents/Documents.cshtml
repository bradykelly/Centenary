@model Centenary.Web.ViewModels.DocTreeViewModel

@{
    ViewBag.Title = "Document List";
}

<h2>@ViewBag.Title</h2>
<h3>Folders under: <strong>@Model.ParentPath</strong></h3>
<ul>
    @foreach(var folder in Model.Folders)
    {
        <li>
            <a asp-controller="Documents" asp-action="Documents" asp-route-folderPath="@folder.FullPath">@folder.Name</a>
        </li>
    }
</ul>
<p><em>@Model.Folders.Count()</em> folders found.</p>
<h3>Documents under: <strong>@Model.ParentPath</strong></h3>
<ul>
    @foreach(var doc in Model.Documents)
    {
        <li>
            <a asp-controller="Documents" asp-action="Documents">@doc.Name</a>
        </li>
    }
</ul>
<p><em>@Model.Folders.Count()</em> documents found.</p>